<div class="w3-content">
  <div class="w3-container w3-padding w3-margin w3-display-center w3-card-4">
    <h3>New Product</h3>

    <%= simple_form_for [:admin, @product], do |f|  %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>

      <%= f.association :categories, collection: Category.all, as: :checkboxes, include_hidden: false %>
      <%= f.button :submit %>

    <%= link_to 'Back to Product List', admin_products_path %>
  </div>
</div>
